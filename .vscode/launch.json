    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: 当前文件",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "blinkremote",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "192.168.1.150",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/code"
                }
            ],
            "preLaunchTask": "kill",
            "justMyCode": false
        }
    ]
}